                  <padding>
                     <Insets left="20.0" right="20.0" top="20.0" />
                  </padding>
               </HBox>
            </children>
         </VBox>
         <Canvas fx:id="canvas" height="606.0" layoutX="39.0" layoutY="72.0" width="1200.0" />
      </children></AnchorPane>
